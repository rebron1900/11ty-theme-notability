---
layout: base
permalink: /archives/index.html
---

<div class="u-max-w-[720px] u-mx-auto u-w-[92%]">
    <div class="u-pt-[30px] u-pb-[30px]">
        {% for post in collections.posts | groupbydate %}
            {% if post.data %}
                <h2 class="u-text-[24px] u-font-bold u-py-[10px] u-my-[10px] u-border-b-[1px] u-border-solid u-border-b-main-bd-color-light dark:u-border-b-main-bd-color-dark">{{post.year}}</h2>
                {% for month in post.data %}
                    <h3 class="u-text-[20px] u-font-normal">{{ month.month | usMonth }} / {{ month.month }}</h3>
                    {% if month.data %}
                        <ul class="u-grid u-grid-cols-[repeat(2,1fr)] u-gap-5 u-px-0 u-py-5;">
                            {% for monthdata in month.data %}
                                <li class="u-p-[15px]">
                                    <div class="u-leading-[1.4] u-text-[14px]">
                                        <a href="{{monthdata.slug | absoluteUrl }}">
                                            {{monthdata.title}}
                                        </a>
                                    </div>
                                    <div class="u-text-[14px]">{{monthdata.published_at | htmlDate }}</div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>
</div>